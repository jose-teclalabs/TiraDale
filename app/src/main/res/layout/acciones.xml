<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:layout_width="160dp"
    android:layout_height="70dp"
    android:src="@drawable/titulo"
    android:id="@+id/imgTitulo"
    android:layout_centerHorizontal="true"
    />

    <TextView
        android:id="@+id/txtColegio"
        android:layout_below="@+id/imgTitulo"
        android:layout_marginTop="10dp"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:id="@+id/btnPublicar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/imgTitulo"
        android:background="@drawable/publicar"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:id="@+id/btnVerResultados"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/verresultado"/>


</RelativeLayout>